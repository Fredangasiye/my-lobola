{
  "version": 2,
  "installCommand": "npm ci",
  "builds": [
    {
      "src": "api/calculate.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/health.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "build": {
    "env": {
      "NPM_CONFIG_ROLLUP_NATIVE": "skip"
    }
  },
  "functions": {
    "api/**": {
      "runtime": "nodejs20.x",
      "includeFiles": "shared/**"
    }
  },
  "routes": [
    {
      "src": "/api$",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/calculate",
      "dest": "/api/calculate.ts"
    },
    {
      "src": "/health",
      "dest": "/api/health.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}