{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "build": {
    "env": {
      "NPM_CONFIG_ROLLUP_NATIVE": "skip"
    }
  },
  "functions": {
    "api/**": {
      "runtime": "nodejs22.x",
      "includeFiles": "shared/**"
    }
  },
  "rewrites": [
    { "source": "/api", "destination": "/api/health.cjs" },
    { "source": "/api/calculate", "destination": "/api/calculate.ts" },
    { "source": "/health", "destination": "/api/health.cjs" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}